{
  "name": "author",
  "version": "0.0.5",
  "description": "AI Author assistant",
  "keywords": [
    "AI",
    "Author",
    "Editor"
  ],
  "homepage": "https://github.com/huangjien/author#readme",
  "bugs": {
    "url": "https://github.com/huangjien/author/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/huangjien/author.git"
  },
  "license": "MIT",
  "author": "Jien Huang",
  "type": "commonjs",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:integration:run": "ts-node ./test/suite/runTest.ts",
    "test:contract": "jest --testPathPattern=tests/contracts",
    "test:contract:ci": "cross-env NODE_ENV=test jest --runInBand --testPathPattern=tests/contracts",
    "check:ts": "tsc --noEmit",
    "check:format": "prettier --check .",
    "check": "npm run check:ts && npm run check:format",
    "lint": "eslint 'src/**/*.{ts,js}' --max-warnings=0",
    "lint:fix": "eslint 'src/**/*.{ts,js}' --fix"
  },
  "prepare": "husky install",
  "lint-staged": {
    "**/*.{js,ts,tsx,json,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/jest": "^29.0.0",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "body-parser": "^1.20.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.1",
    "express": "^4.18.2",
    "husky": "^8.0.0",
    "jest": "^29.0.0",
    "lint-staged": "^13.0.0",
    "prettier": "^3.0.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.0"
  }
}
